extends layout

block content
    h1 Toy Detail

    if (toShow == null)
        h2 No instance found
    else
        - let toyid = toShow._id
        - let name = toShow.name
        - let price_range = toShow.price_range
        - let type = toShow.type

        div(class="mb-3")
            div.row.mb-2
                div(class='toyAttr mr-3 font-weight-bold') Toy ID:
                div #{toyid}
            div.row.mb-2
                div(class='toyAttr mr-3 font-weight-bold') Toy Name:
                div #{name}
            div.row.mb-2
                div(class='toyAttr mr-3 font-weight-bold') Toy type:
                div #{type}
            div.row.mb-2
                div(class='toyAttr mr-3 font-weight-bold') Toy price_range:
                div #{price_range}

        button(class="btn btn-secondary mt-3" onclick="goBack()") Go Back

    script.
        function goBack() {
            window.location.href = "/toys";
        }
