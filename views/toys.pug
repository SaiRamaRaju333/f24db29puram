extends layout

block content
  h1 Search Results - Toys

  .container-fluid
    .row
      each item in results
        div.col-sm-3
          h3 #{item.name}
          p Type: #{item.type}
          p Price_Range: #{item.price_range}
          a(href=`/toys/${item._id}`) Inspect
          a(href=`/toys/${item._id}/update`) Update
          a(href=`/toys/${item._id}/delete`) Delete
  
  a(href='/toys/create') Add New Toy

